# Use official PHP with Apache
FROM php:8.3-apache

ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies and required PHP extensions for Laravel.
# NOTE: pdo_mysql has been removed.
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    libzip-dev \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    pkg-config \
    libssl-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && docker-php-ext-install zip bcmath gd

# Install a specific version of the mongodb extension to match composer.lock
RUN pecl install mongodb && docker-php-ext-enable mongodb

# Configure Apache for Laravel's pretty URLs
RUN a2enmod rewrite

# Set the working directory
WORKDIR /var/www/html

# Install Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# --- Docker Build Optimization ---
# Copy only composer files first to leverage Docker's layer caching.
COPY composer.json composer.lock ./
RUN composer install --no-interaction --no-dev --optimize-autoloader

# Now, copy the rest of the application files
COPY . .

# Set the correct permissions for Laravel's storage and cache folders
RUN chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache

# Expose port 80 to the outside world
EXPOSE 80

# Recommended: Add a health check for Render
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s \
  CMD curl -f http://localhost/up || exit 1

# The command to start the Apache server
CMD ["apache2-foreground"]